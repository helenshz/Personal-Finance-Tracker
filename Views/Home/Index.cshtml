@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center py-5 custom-content-spacing"> 
    
    <h1 class="display-3 fw-bold mb-3">Finance Tracker</h1>
    <p class="lead text-muted mx-auto" style="max-width: 600px;">
        Securely manage your personal financial records, stored locally.
    </p>
    
    <a asp-controller="Transactions" asp-action="Index" class="btn btn-dark btn-lg mt-5 rounded-pill shadow">
        View All Transactions
    </a>

    <div class="mt-4">
        <a asp-controller="Transactions" asp-action="Create" class="text-secondary text-decoration-none fw-semibold">
            + Add New Record
        </a>
    </div>
</div>